<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <%- include("./partials/customer/head.ejs") %>
</head>
<body>
    <div class="container-template-services">
        <div class="content">
                <div class="mid-services">
                    <div class="img-services">
                        <img src="/assets/barberbg1.png" alt="" width="900" height="669">
                    </div>
                    <div class="menu-services">
                        <h3 class="text-dark ml-5">Menu</h3>
                        <% data.forEach(service => { %>
                            <div class="menu" style="border-bottom: 1px white solid;">
                                <h4 class="text-light ml-5 mt-2"><%= service.name %></h4>
                                <h5 class="text-light ml-5"><%= intoRupiah(service.price) %></h5>
                            </div>
                        <% })  %>
                        <div class="options mt-3">
                            <a href="/customer/service/form" class="text-secondary ml-5"><button class="btn btn-dark">Order</button></a>
                            <a href="/"><button type="button" class="btn btn-dark ml-2">Back to home</button></a>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <%- include("./partials/customer/footer.ejs") %>
    </div>
</body>
</html>