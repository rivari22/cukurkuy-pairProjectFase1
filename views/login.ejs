<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <%- include("./partials/customer/head.ejs") %>
</head>
<body>
    <div class="bg-darker">
    <div class="container">
        <%- include("./partials/customer/header.ejs") %>
        <main>
            <h3 class="text-light">Login</h3>
            <form action="/login" method="POST">
                <div class="form-group">
                    <label for="username" class="text-light">Username</label> <br>
                    <input type="text" name="username" id="username">
                </div>
                <div class="form-group">
                    <label for="password" class="text-light">Password</label> <br>
                    <input type="password" name="password" id="password">
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
                <a href="/"><button type="button" class="btn btn-danger ml-2">Cancel</button></a>
            </form>
        </main>
        <%- include("./partials/customer/footer.ejs") %>
    </div>
    </div>
</body>
</html>