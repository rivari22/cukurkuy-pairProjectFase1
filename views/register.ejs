<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <%- include("./partials/customer/head.ejs") %>
</head>
<body>
    <div class="bg-darker">
        <div class="container">
            <%- include("./partials/customer/header.ejs") %>
            <h2 class="mb-3 text-light">Register</h2>
            <form action="/register" method="post">
                <div class="form-group">
                    <label for="name" class="text-light">Name</label> <br>
                    <input type="text" name="name" id="name">
                </div>
                <div class="form-group">
                    <label for="username" class="text-light">Username</label> <br>
                    <input type="text" name="username" id="username">
                </div>
                <div class="form-group">
                    <label for="password" class="text-light">Password</label> <br>
                    <input type="password" name="password" id="password">
                </div>
                <div class="form-group">
                    <input type="hidden" name="gender" id="gender" value="male">
                </div>
                <div class="form-group">
                    <input type="hidden" name="role" id="role" value="customer">
                </div>
                <div class="form-group">
                    <label for="email" class="text-light">Email</label> <br>
                    <input type="email" name="email" id="email">
                </div>
                <div class="form-group">
                    <label for="phone_number" class="text-light">Phone number</label> <br>
                    <input type="tel" name="phone_number" id="phone_number">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
                <a href="/"><button type="button" class="btn btn-danger ml-2">Cancel</button></a>
            </form>
            <% if(query) { %>
            <h4 class="text-light"> <%= query  %><h4>
            <% }  %> 
            <% if(errors) { %>
                <% errors.forEach(element => { %>
                    <span style="color: red;"><%= element %> </span><br> <% // Nanti ubah lagi riv stylenya %> 
                <% }) %> 
            <% } %> 
            <%- include("./partials/customer/footer.ejs") %>
        </div>
    </div>
</body>
</html>